<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
    >

  <TextView android:id="@+id/username_text"
            android:text="@string/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="0dp"
      />

  <EditText android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:singleLine="true"
            android:layout_marginBottom="1dp" android:id="@+id/EditText_Name"/>
  <Button android:layout_height="wrap_content" android:id="@+id/Button_OkTrack" android:layout_width="wrap_content" android:text="Button"></Button>
</LinearLayout>

